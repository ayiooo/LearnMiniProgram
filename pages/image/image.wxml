<!--pages/image/image.wxml-->
<!-- 1.image的基本使用 -->
<!-- 
  重点：
    1. image组件可以写成单标签，也可以写成双标签
    2. image组件默认有自己的大小， 320 x 240
    3. image组件是一个行内块级元素
 -->
<image />
<text>哈哈哈</text>

<!-- 2. src：本地地址（相对路径/绝对定位）/远程地址 -->
<image src="../../assets/1.jpg"></image>
<!-- 第一个斜杠代表根路径 -->
<image src="/assets/1.jpg"></image>
<image src="https://images.unsplash.com/photo-1582887122657-10777f591b57?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1052&q=80"></image>
<!-- 补充：相册中的图片 -->
<button bindtap="handleChooseAlbum">选中图片</button>
<image  src="{{imagePath}}"></image>

<!-- 3.bindload：监听图片加载完成 -->
<!-- lazyload：图片懒加载 -->
<view>-----------------------------</view>
<image wx:for="{{1}}"
  bindload="imageloadover" 
  lazy-load    src="https://res.wx.qq.com/wxdoc/dist/assets/img/0.4cb08bb4.jpg"></image>

<!-- 4.show-menu-by-longpress 长按图片出现小程序码 -->
<image src="/assets/1.jpg" show-menu-by-longpress></image>